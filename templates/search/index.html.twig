{% extends 'base.html.twig' %}
{# {% block title %} {{ parent() | Connexion }} {% endblock %} #}
 {% block stylesheets %}
     <style>

     </style>
 {% endblock %}
    {% block nav %}
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
             aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('offre_inserer') }}">Nouvelle
                                offre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page"
                               href="{{ path('candidat_profil') }}">profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page"
                               href="{{ path('app_logout') }}">Deconnexion</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('main_site') }}">Qui
                            sommes-nous?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_register') }}">Inscription</a>
                    </li>

                </ul>
            </div>
        </div>
    {% endblock %}

    {% block body %}
        <div class="card">
            <div class="card-header">
                <div class="col d-flex justify-content-center">
                    <div class="row ">
                        <h2>Bienvenue sur MonEmploi</h2><br>
                    </div>
                    <div class="row ">
                        <i>Votre avenir garanti</i>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row ">
                    <div class="col-md-3">
                        <img src="{{ asset('img/monemploi.png') }}" class="card-img-top" alt="...">
                    </div>
                    <div class="col-md-9">
                        <table class="table bg-secondary bg-opacity-25 ">
                            <thead>
                            <tr>
                                <th scope="col">Numéro</th>
                                <th scope="col">Intitulé du poste</th>
                                <th scope="col">Employeur</th>
                                <th scope="col">Date de publication</th>
                                <th scope="col">Options</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for of in offre %}
                                <tr>
                                    <td>{{ of.id }}</td>
                                    <td>{{ of.intitule }}</td>
                                    <td>{{ of.employeur }}</td>
                                    <td>{{ of.dateDePublication|date("m/d/Y") }}</td>
                                    <td><a href="#myBtn" data-toggle="modal" id="myBtn">Consulter</a>
                                    </td>
{#                                    <td><a href="update-article/{{ article.id }}">Update</a></td>#}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>


                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Login</h4>
                                    </div>
                                    <div class="modal-body">
                                        <form role="form">
                                            <div class="form-group">
                                                <label for="usrname"><span class="glyphicon glyphicon-user"></span>
                                                    Username</label>
                                                <input type="text" class="form-control" id="usrname"
                                                       placeholder="Enter email">
                                            </div>
                                            <div class="form-group">
                                                <label for="psw"><span class="glyphicon glyphicon-eye-open"></span>
                                                    Password</label>
                                                <input type="text" class="form-control" id="psw"
                                                       placeholder="Enter password">
                                            </div>
                                            <div class="checkbox">
                                                <label><input type="checkbox" value="" checked>Remember me</label>
                                            </div>
                                            <button type="submit" class="btn btn-default btn-success btn-block"><span
                                                        class="glyphicon glyphicon-off"></span> Login
                                            </button>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-default btn-default pull-left"
                                                data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>
                                            Cancel
                                        </button>
                                        <p>Not a member? <a href="#">Sign Up</a></p>
                                        <p>Forgot <a href="#">Password?</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- fin Button trigger modal -->
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block script %}
        <script>
            var btn = document.querySelector('#myBtn')
            $(document).ready(function () {
                $(btn).click(function () {
                    // Show the Modal on load
                    $("#myModal").modal("show");
                });
            });

        </script>
    {% endblock %}
